<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.sounds.PlaySoundsFragment">

    <ImageView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_22sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/btnBack"
        android:layout_margin="@dimen/_12sdp"/>
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_play_song"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_140sdp"
        android:id="@+id/imgAvatar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Curi"
        android:textSize="@dimen/_18ssp"
        android:id="@+id/txtTitle"/>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/icPlay"
        android:background="@drawable/ic_play_music"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:id="@+id/ic"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:src="@drawable/ic_sound"
        app:layout_constraintTop_toBottomOf="@id/icPlay"
        app:layout_constraintStart_toStartOf="parent"/>
    <SeekBar
        android:id="@+id/sliderOpacity"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/icPlay"
        app:layout_constraintStart_toEndOf="@id/ic"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressDrawable="@drawable/slider_track"
        android:thumb="@drawable/slider_thumb"
        android:progress="255"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:thumbOffset="@dimen/_10sdp"
        android:splitTrack="false"
        android:max="255"
        android:min="50"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.songs.SongsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingStart="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/_12sdp"
        android:id="@+id/txtTitle"
        android:background="@color/bottom_nav_selected"
        android:text="Dog Translate" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dog"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_select"
        android:id="@+id/btnDog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCat"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:layout_margin="@dimen/_12sdp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cat"
        android:textColor="@color/black"
        android:background="@drawable/bg_btn_unselect"
        android:id="@+id/btnCat"
        app:layout_constraintStart_toEndOf="@id/btnDog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:layout_margin="@dimen/_12sdp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnDog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        tools:listitem="@layout/item_list_sounds"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        android:id="@+id/rcvSounds"/>

</androidx.constraintlayout.widget.ConstraintLayout>
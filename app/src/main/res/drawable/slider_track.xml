<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_16sdp"/> <solid android:color="@color/bottom_nav_unselected"/>
            <size android:height="@dimen/_5sdp"/> </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/_16sdp"/>
                <solid android:color="@color/bottom_nav_selected"/>
                <size android:height="@dimen/_5sdp"/>
            </shape>
        </clip>
    </item>
</layer-list>